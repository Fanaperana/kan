{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:14251",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "Kan",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": true
    },
    "systemTray": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true
    },
    "bundle": {
      "active": true,
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": ".kan",
      "targets": "all"
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "label": "main",
        "url": "index.html",
        "fullscreen": false,
        "resizable": true,
        "title": "kan",
        "maxWidth": 300,
        "maxHeight": 2160,
        "minWidth": 200,
        "minHeight": 200,
        "width": 280,
        "height": 400,
        "decorations": false,
        "visible": true,
        "alwaysOnTop": true
      }
    ]
  }
}
